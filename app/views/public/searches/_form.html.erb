<div class="tagsearch_form mr-5">
  <table align="center">
    <tr>
      <div class="tagsearch_form">
        <%= form_with(url: search_path, method: :get, local: true) do |f| %>
          <td>
            <i class="fa-solid fa-magnifying-glass fa-beat"></i>
          </td>
          <td>
            <%= f.text_field :keyword_content, id: "field1", size: "30", placeholder: "キーワードを入力してください。", class: "form-control" %>
          </td>
          <td>
            <%= f.select :model, options_for_select({ "ユーザー" => "user", "ライフハック" => "lifehack" }), {}, class: "custom-select" %>
          </td>
          <td>
            <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }), {}, class: "custom-select" %>
          </td>
          <td>
            <%= f.submit 'キーワード検索'.html_safe, class: "btn btn-primary" %>
          </td>
        <% end %>
      </div>
    </tr>
  </table>
</div>