<div class="container py-1">
  <div class="row">
    <div class="col-12 text-start">
      <% if @user == current_user %>
        <h3 class="mt-3 mb-5">
          <i class="fa-regular fa-user"></i>
            マイページ
        </h3>
      <% else %>
        <h3 class="mt-3 mb-5">
          <i class="fa-regular fa-user"></i>
            ユーザーページ
        </h3>
      <% end %>
      <div class="d-flex">
        <h4><b>登録情報</b></h4>
        <% if @user == current_user %>
          <%= link_to "編集する", edit_user_path(@user.id), class: "btn btn-dark ml-3" %>
        <% end %>
      </div>
      <br>
      <table class="table table-bordered">
        <tr>
          <%= image_tag @user.get_profile_image(300, 300), class: "mb-3" %>
        </tr>
        <tr>
          <td>アカウント名</td>
          <td><%= @user.account_name %></td>
        </tr>
        <tr>
          <td>紹介文</td>
          <td><%= @user.introduction %></td>
        </tr>
        <% if @user == current_user %>
          <tr>
            <td>メールアドレス</td>
            <td><%= @user.email %></td>
          </tr>
        <% end %>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @user.is_active == true %>
              <p class="text-secondary">退会</p>
            <% else %>
              <p class="text-success">有効</p>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="d-flex align-center">
        <h4><b>投稿履歴</b></h4>
        <%= link_to "一覧を見る", index_user_user_path(@user), class: "btn btn-dark ml-2 mr-4" %>
        <h4><b>いいね一覧</b></h4>
        <%= link_to "一覧を見る", favorites_user_path(@user), class: "btn btn-dark ml-2" %>
      </div>
    </div>
  </div>
</div>