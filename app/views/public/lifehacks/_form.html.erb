<h1>投稿内容入力</h1>
<%= form_with model: lifehack do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title, autofocus: true, placeholder: "タイトル（2文字以上、20文字以内）を入力してください。", class: 'form-control' %>
  <h4>本文</h4>
  <%= f.text_area :body, placeholder: "本文（10文字以上、200文字以内）を入力してください。", class: 'form-control' %>
  <h4>画像解説</h4>
  <P>最大3枚まで投稿可能</P>
  <%= f.file_field :lifehack_images, multiple: true, accept: "image/*" %>
   <!--おすすめ度(star)についての記述-->
  <% if lifehack.id.nil? %>
    <div class="form-group" id="star">
      <h4>おすすめ度</h4>
      <%= f.hidden_field :star, id: :review_star, class: 'form-control' %>
      <div id="post_raty"></div>
    </div>
    <script>
    $(document).on('turbolinks:load', function() {
      let elem = document.querySelector('#post_raty');
      if (elem == null) return;

      elem.innerHTML = ""
      let opt = {
        starOn: "<%= asset_path('star-on.png') %>",
        starOff: "<%= asset_path('star-off.png') %>",
        scoreName: 'lifehack[star]',
      };
      raty(elem, opt);
    });
  </script>
  <% else %>
    <div class="form-group">
      <h4>おすすめ度（変更不可）</h4>
      <%= render "static.rate", lifehack: lifehack %>
    </div>
  <% end %>
  <!-- tagについての記述-->
  <div class="form-group">
    <h4>タグ設定</h4>
      <%= f.text_field :tag, placeholder: "タグ検索で入力するタグ（2文字以上、20文字以内）を設定してください。", class: 'form-control' %>
  </div>
  <% if lifehack.id.nil? %>
    <%= f.submit '新規投稿', :name => 'post', class: "btn btn-dark px-4" %>
    <%= f.submit '下書きに保存', :name => 'draft', class: "btn btn-dark px-4" %>
    <%= link_to "下書き一覧", index_draft_lifehacks_path, class: "btn btn-dark ml-3" %>
  <% else %>
    <% if lifehack.is_draft == true %>
      <%= f.submit "ライフハックを公開", :name => 'publicize_draft', class:'mr-5 btn btn-sm btn-warning' %>
      <%= f.submit "下書きを更新", :name => 'update_draft', class:'mr-5 btn btn-sm btn-outline-secondary' %>
    <% else %>
      <%= f.submit '変更を保存', :name => 'update_post', class: "btn btn-dark px-4" %>
    <% end %>
  <% end %>
<% end %>
