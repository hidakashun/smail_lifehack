<h1>投稿内容入力</h1>
<%= form_with model: lifehack do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title, class: 'form-control' %>
  <h4>本文</h4>
  <%= f.text_area :body, class: 'form-control' %>
  <h4>画像解説</h4>
  <%= f.file_field :lifehack_images, multiple: true, accept: "image/*" %>
   <!--おすすめ度(star)についての記述-->
  <% if lifehack.id.nil? %>
    <div class="form-group" id="star">
      <h4>おすすめ度</h4>
      <%= f.hidden_field :star, id: :review_star, class: 'form-control' %>
      <div id="post_raty"></div>
    </div>
    <script>
    $(document).on('turbolinks:load', function() {
      let elem = document.querySelector('#post_raty');
      if (elem == null) return;

      elem.innerHTML = ""
      let opt = {
        starOn: "<%= asset_path('star-on.png') %>",
        starOff: "<%= asset_path('star-off.png') %>",
        scoreName: 'lifehack[star]',
      };
      raty(elem, opt);
    });
  </script>
  <% else %>
    <div class="form-group">
      <h4>おすすめ度（変更不可）</h4>
      <%= render "static.rate", lifehack: lifehack %>
    </div>
  <% end %>
  <!-- tagについての記述-->
  <div class="form-group">
    <h4>タグ設定</h4>
      <%= f.text_field :tag, class: 'form-control' %>
  </div>
  <% if lifehack.id.nil? %>
    <%= f.submit '新規投稿', class: "btn btn-dark px-4" %>
  <% else %>
    <%= f.submit '変更を保存', class: "btn btn-dark px-4" %>
  <% end %>
<% end %>
