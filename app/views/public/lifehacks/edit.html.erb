<div class="container py-1">
  <div class="row">
    <div class="col-12 text-start">
      <h3 class="mt-3">
        <i class="fa-regular fa-pen-to-square"></i>
        投稿編集
      </h3>
    </div>
  </div>
  <div class="row">
    <div class="col-10 offset-1 text-start">
      <%= render 'layouts/error', obj: @lifehack %>
    </div>
  </div>
  <div class="row">
    <div class="col-10 offset-1 text-start">
      <%= render "public/lifehacks/form", lifehack: @lifehack %>
    </div>
  </div>
  <div class="row mt-3">
  <div class="col-4 offset-2">
    <%= link_to '詳細ページ', @lifehack, class: "btn btn-outline-primary px-5 mb-4" %>
  </div>
  <div class="col-4 offset-2">
    <%= link_to '投稿一覧', lifehacks_path, class: "btn btn-outline-success px-5 mb-4" %>
  </div>
</div>