<div class="container py-1">
  <div class="row">
    <div class="col-12 text-start">
      <h3 class="mt-3">
        <% if @lifehack.is_draft %>
          <i class="fa-regular fa-pen-to-square"></i>
          下書き投稿編集
        <% else %>
          <i class="fa-regular fa-pen-to-square"></i>
          投稿編集
        <% end %>
      </h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 offset-md-1 text-start">
      <%= render 'layouts/error', obj: @lifehack %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 offset-md-1 text-start">
      <%= render "public/lifehacks/form", lifehack: @lifehack %>
    </div>
  </div>
  <div class="row justify-content-center mt-3">
    <% if @lifehack.is_draft %>
      <div class="col-6 col-md-4 mb-2">
        <%= link_to '下書き投稿詳細ページ', @lifehack, class: "btn btn-outline-primary btn-block mb-4" %>
      </div>
    <% else %>
      <div class="col-6 col-md-4 mb-2">
        <%= link_to '詳細ページ', @lifehack, class: "btn btn-outline-primary btn-block mb-4" %>
      </div>
    <% end %>
    <div class="col-6 col-md-4 mb-2">
      <%= link_to '投稿一覧', lifehacks_path, class: "btn btn-outline-success btn-block mb-4" %>
    </div>
  </div>
</div>
