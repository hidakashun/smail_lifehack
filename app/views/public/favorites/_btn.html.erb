<% if lifehack.favorited_by?(current_user) %>
  <%= link_to lifehack_favorites_path(lifehack), method: :delete,  style: "color: red;" do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= lifehack.favorites.count %>
  <% end %>
<% else %>
  <%= link_to lifehack_favorites_path(lifehack), method: :post do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= lifehack.favorites.count %>
  <% end %>
<% end %>