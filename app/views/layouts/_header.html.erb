<header>
  <%= link_to "topページ", root_path %>
    <% if user_signed_in? %>
      <%= link_to "新規投稿", new_lifehack_path %>
      <%= link_to "マイページ", user_path(current_user) %>
      <%= link_to "投稿一覧", lifehacks_path %>
      <%= link_to "ユーザー一覧",users_path %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
    <% elsif admin_signed_in? %>
      <%= link_to "投稿一覧", admin_root_path %>
      <%= link_to "ユーザー一覧",admin_users_path %>
      <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
    <% else %>
      <%= link_to "About", about_path %>
      <%= link_to "投稿一覧", lifehacks_path %>
      <%= link_to "ユーザー一覧",users_path %>
      <%= link_to "新規登録", new_user_registration_path %>
      <%= link_to "ログイン", new_user_session_path %>
  <% end %>
  <div class="d-flex justify-content-center mb-2"><!--キーワード、タグ検索機能-->
    <%= render 'public/searches/form' %><!--キーワード検索機能-->
    <%= render 'public/tagsearches/form' %><!--タグ検索機能-->
  </div>
</header>