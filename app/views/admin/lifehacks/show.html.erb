
<div class="container py-5">
  <h3>投稿詳細</h3>
  <div class="row justify-content-center">
  <table class="table table-borderless text-center">
    <tr>
      <td>タイトル</td>
      <td><%= @lifehack.title %></td>
    <tr>
      <td>本文</td>
      <td><%= simple_format(@lifehack.body) %></td>
    </tr>
    <tr>
      <td>おすすめ度</td>
      <td><%= render "public/lifehacks/static.rate", lifehack: @lifehack %></td>
    </tr>
    <tr>
      <td>タグ</td>
      <td>未実装</td>
    </tr>
    <tr>
      <td>画像解説</td>
      <td>
        <% if @lifehack.lifehack_images.attached? %>
          <% @lifehack.lifehack_images.each do |image| %>
            <%= image_tag image.variant(resize: "300x300") %>
          <% end %>
        <% else %>
            <%= image_tag 'no_lifehack_image.jpg' %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td>投稿日</td>
      <td><%= @lifehack.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <td>いいね数</td>
      <% if user_signed_in? %>


      <% else %>
      <td>いいねを確認するにはログインが必要です。</td>
      <% end %>
    </tr>
    <tr>
      <td>コメント数</td>
      <td class="lifehack-comments-counter"><!--コメント非同期通信-->
        <%= render "public/lifehack_comments/counter", lifehack: @lifehack %><!--コメント数-->
      </td>
    </tr>
    <tr>
      <td>コメント一覧</td>
      <td class="lifehack-comments-index">
        <%= render "public/lifehack_comments/index", lifehack: @lifehack %><!--コメント機能一覧-->
      </td>
    </tr>
  </table>
  </div>
</div>
